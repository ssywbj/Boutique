<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="2.14"
        android:shape="ring"
        android:thicknessRatio="34"
        android:useLevel="false" >
        <gradient
            android:centerColor="#31c6e5"
            android:endColor="#02a1e5"
            android:startColor="#5ce7e5"
            android:type="sweep" />
    </shape>

</rotate>