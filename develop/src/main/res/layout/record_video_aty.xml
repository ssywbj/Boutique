<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordVideoActivity" >

    <jie.example.widget.RecordVideoView
        android:id="@+id/moive_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center" >

        <TextView
            android:id="@+id/start_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:alpha="0.6"
            android:clickable="true"
            android:drawablePadding="-2dip"
            android:drawableTop="@drawable/transparent_menu_pic2"
            android:gravity="center"
            android:onClick="setOnClick"
            android:text="@string/record"
            android:textColor="@color/eagle_one"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stop_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:alpha="0.6"
            android:clickable="true"
            android:drawablePadding="-2dip"
            android:drawableTop="@drawable/transparent_menu_pic1"
            android:gravity="center"
            android:onClick="setOnClick"
            android:text="@string/stop"
            android:textColor="@color/eagle_one"
            android:textSize="20sp" />
    </LinearLayout>

</merge>