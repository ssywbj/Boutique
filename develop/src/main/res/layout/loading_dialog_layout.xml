<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loading_dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/loading_dialog_centre_pic" />

        <ProgressBar
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/loading_dialog_centre_progressbar"
            android:indeterminateDuration="800" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_content_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:singleLine="true"
            android:text="@string/note_loading"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_text_point"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>