<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_expression_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expression_panel_view_pager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/expression_panel_view_pager_indicator"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_point_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/top_bar_divide_line_margin" />

        <ImageView
            android:id="@+id/image_point_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_bar_divide_line_margin"
            android:src="@drawable/expression_unit_normal" />
    </LinearLayout>

</merge>


