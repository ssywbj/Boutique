<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/vertical_progress_bar_radius" />
            <solid android:color="@color/vertical_progress_bar"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/vertical_progress_bar_radius" />
                <solid android:color="@color/vertical_progress_bar_bg"/>
            </shape>
        </clip>
    </item>

</layer-list>

