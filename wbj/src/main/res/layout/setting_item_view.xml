<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_left"
                android:layout_width="@dimen/setting_left_image"
                android:layout_height="@dimen/setting_left_image"
                android:layout_marginRight="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxWidth="@dimen/setting_text_max_width"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_main_title"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxWidth="180dp"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_sub_title"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxWidth="@dimen/setting_text_max_width"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/setting_right_text"/>

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="@dimen/setting_right_image"
            android:layout_height="@dimen/setting_right_image"
            android:visibility="gone"/>
    </LinearLayout>

</merge>
