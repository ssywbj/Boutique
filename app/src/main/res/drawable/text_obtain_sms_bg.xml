<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--可用状态-->
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/divide_line_height" android:color="@color/text_obtain_sms_enabled"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <!--不可用状态-->
    <item>
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/divide_line_height" android:color="@color/text_obtain_sms_disabled"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</selector>