<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下状态-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>
    <!--默认状态-->
    <item>
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>