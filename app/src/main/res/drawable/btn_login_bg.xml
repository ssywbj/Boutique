<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下状态-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="@color/login_btn_pressed"/>
        </shape>
    </item>
    <!--可用状态-->
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="@color/login_btn_enabled"/>
        </shape>
    </item>
    <!--默认状态-->
    <item>
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="@color/login_btn_disabled"/>
        </shape>
    </item>
</selector>