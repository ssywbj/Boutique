<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="14"/>

    <EditText
        android:id="@+id/edit_identity_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"/>

    <com.suheng.ssy.boutique.view.BoutiqueKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/keyboard_margin_bottom"
        android:background="#D1D3D8"
        android:keyBackground="@drawable/keyboard_key_bg"
        android:keyTextColor="@color/black"
        android:shadowRadius="0"
        android:visibility="gone"
        app:shuffle="true"
        app:type="number"/>
</RelativeLayout>
