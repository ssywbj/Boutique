<?xml version="1.0" encoding="utf-8"?>
<Keyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0.9%p"
    android:keyWidth="9.01%p"
    android:keyHeight="@dimen/keyboard_key_height"
    android:verticalGap="6dp">

    <!--类似与内边距属性-->
    <Row
        android:keyHeight="0%p"
        android:rowEdgeFlags="top"/>

    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:keyLabel="q"/>
        <Key android:keyLabel="w"/>
        <Key android:keyLabel="e"/>
        <Key android:keyLabel="r"/>
        <Key android:keyLabel="t"/>
        <Key android:keyLabel="y"/>
        <Key android:keyLabel="u"/>
        <Key android:keyLabel="i"/>
        <Key android:keyLabel="o"/>
        <Key android:keyLabel="p"/>
        <!--类似与内边距属性-->
        <Key
            android:keyEdgeFlags="right"
            android:codes="-9999"
            android:keyWidth="0%p"/>
        <!--10*9.01+11*0.9=90.1+9.9=100-->
    </Row>

    <Row>
        <Key
            android:horizontalGap="5%p"
            android:keyEdgeFlags="left"
            android:keyLabel="a"/>
        <Key android:keyLabel="s"/>
        <Key android:keyLabel="d"/>
        <Key android:keyLabel="f"/>
        <Key android:keyLabel="g"/>
        <Key android:keyLabel="h"/>
        <Key android:keyLabel="j"/>
        <Key android:keyLabel="k"/>
        <Key
            android:keyEdgeFlags="right"
            android:keyLabel="l"/>
    </Row>

    <Row>
        <Key
            android:codes="-1"
            android:isModifier="true"
            android:isSticky="true"
            android:keyWidth="15%p"
            android:keyEdgeFlags="left"
            android:keyLabel="shift"/>
        <Key android:keyLabel="z"/>
        <Key android:keyLabel="x"/>
        <Key android:keyLabel="c"/>
        <Key android:keyLabel="v"/>
        <Key android:keyLabel="b"/>
        <Key android:keyLabel="n"/>
        <Key android:keyLabel="m"/>
        <Key
            android:codes="-5"
            android:isModifier="true"
            android:isRepeatable="true"
            android:keyWidth="15%p"
            android:keyEdgeFlags="right"
            android:keyLabel="delete"/>
        <!--类似与内边距属性-->
        <Key
            android:keyEdgeFlags="right"
            android:codes="-9999"
            android:keyWidth="0%p"/>
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key
            android:codes="-11"
            android:keyWidth="15%p"
            android:keyEdgeFlags="left"
            android:keyLabel="123"/>
        <Key
            android:keyWidth="15%p"
            android:keyLabel=".com"
            android:keyOutputText=".com"/>
        <Key
            android:codes="-13"
            android:keyWidth="40%p"
            android:keyLabel="@string/app_name"/>

        <Key
            android:codes="-12"
            android:keyWidth="15%p"
            android:keyLabel="#+="/>
        <Key
            android:codes="-4"
            android:keyWidth="15%p"
            android:keyEdgeFlags="right"
            android:keyLabel="Done"/>
        <!--类似与内边距属性-->
        <Key
            android:keyEdgeFlags="right"
            android:codes="-9999"
            android:keyWidth="0%p"/>
    </Row>

    <!--类似与内边距属性-->
    <Row
        android:keyHeight="0%p"
        android:rowEdgeFlags="bottom"/>
</Keyboard>